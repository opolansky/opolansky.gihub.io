{% for post in paginator.posts %}

<div class="blog-post" style="margin-top: 4rem;">
    <div class="item" style="max-width: 50rem;margin:auto;">
        <a href="{{site.baseurl}}{{post.url}}">
            <table>
                <tr>
                    <td>
                        <div class="image" style="min-width: 20rem">
                            <img class="thumbnail" style="max-height: 230px;" src="{{post.img | prepend: 'assets/img/posts/' | relative_url}}" alt="">
                        </div>
                    </td>
                    <td>
                        <div class="title" style="padding-left: 1em;">
                            <h3 style="margin-bottom: .1em;">{{post.title}}</h3>
                            <small style="padding-top: .1em;">{{post.date | date:"%d. %m. %Y"}}, {{post.author}}</small>
                            <span class="author" style="font-size: smaller; text-align: justify">{{post.excerpt | markdownify }}</span>
                        </div>
                    </td>
                </tr>
            </table>
            <div class="more" style="margin-top: .5em;">
                <a class="btn btn-default btn-block" href="{{site.baseurl}}{{post.url}}">Chci vědět víc</a>
            </div>
        </a>
    </div>
</div>

